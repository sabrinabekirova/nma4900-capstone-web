/* ===== CSS VARIABLES ===== */
:root {
    /* Brand Colors */
    --red-orange: #db4e35;
    --orange: #e27349;
    --peach: #eca976;
    --cream: #f7deb7;
    --teal-light: #7eaba4;
    --teal: #3d8999;
    --blue: #306d8b;
    --navy: #15254c;
    
    /* Legacy/Additional colors */
    --text-cream: #fefce5;
    --gray: #b8bbb1;
    
    /* Fonts */
    --font-primary: 'JetBrains Mono', monospace;
    --font-secondary: 'Inter', sans-serif;
    
    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 2rem;
    --spacing-lg: 4rem;
    --spacing-xl: 6rem;
}

/* ===== RESET & BASE STYLES ===== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: var(--font-secondary);
    background-color: var(--cream);
    color: var(--navy);
    overflow-x: hidden;
    line-height: 1.6;
}

body:has(#page2.active) {
    overflow: hidden;
    height: 100vh;
}

/* ===== PAGE MANAGEMENT ===== */
.page {
    display: none;
    min-height: 100vh;
}

.page.active {
    display: block;
}

/* Gradient background for entire page 1 */
#page1 {
    background: linear-gradient(
        180deg,
        var(--red-orange) 0%,
        var(--orange) 16.66%,
        var(--peach) 33.33%,
        var(--teal-light) 50%,
        var(--teal) 66.66%,
        var(--blue) 83.33%,
        var(--navy) 100%
    );
}

/* ===== LOGO SECTION ===== */
.logo-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background: transparent;
}

/* Retro CRT scanline effect */
.logo-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.05) 0px,
        transparent 1px,
        transparent 2px,
        rgba(0, 0, 0, 0.05) 3px
    );
    pointer-events: none;
    z-index: 2;
    animation: scanlines 8s linear infinite;
}

@keyframes scanlines {
    0% {
        transform: translateY(0);
    }
    100% {
        transform: translateY(10px);
    }
}

/* Retro screen flicker */
.logo-container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.02);
    pointer-events: none;
    z-index: 2;
    animation: flicker 0.15s infinite;
}

@keyframes flicker {
    0% {
        opacity: 0.8;
    }
    50% {
        opacity: 1;
    }
    100% {
        opacity: 0.85;
    }
}

/* Transparent keyboard behind logo */
.transparent-keyboard {
    width: 500px;
    height: auto;
    transform: rotate(15deg);
    position: absolute;
    z-index: 5;
    opacity: 0.15;
    animation: float-slow 8s ease-in-out infinite, pulse-glow 4s ease-in-out infinite;
    filter: blur(1px) drop-shadow(0 0 30px rgba(61, 137, 153, 0.5));
}

.transparent-key-bg {
    fill: none;
    stroke: var(--teal);
    stroke-width: 2;
    opacity: 0.3;
}

.transparent-key {
    fill: rgba(61, 137, 153, 0.2);
    stroke: var(--text-cream);
    stroke-width: 1.5;
    opacity: 0.4;
}

@keyframes float-slow {
    0%, 100% {
        transform: rotate(15deg) translateY(0px) scale(1);
    }
    50% {
        transform: rotate(15deg) translateY(-30px) scale(1.05);
    }
}

@keyframes pulse-glow {
    0%, 100% {
        opacity: 0.15;
        filter: blur(1px) drop-shadow(0 0 30px rgba(61, 137, 153, 0.5));
    }
    50% {
        opacity: 0.25;
        filter: blur(2px) drop-shadow(0 0 50px rgba(61, 137, 153, 0.8));
    }
}

#logo-wrapper {
    width: 400px;
    height: auto;
    transform: rotate(15deg);
    position: relative;
    z-index: 10;
    animation: float 6s ease-in-out infinite;
}

@keyframes float {
    0%, 100% {
        transform: rotate(15deg) translateY(0px);
    }
    50% {
        transform: rotate(15deg) translateY(-20px);
    }
}

#main-logo {
    width: 100%;
    height: auto;
    filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.1)) drop-shadow(0 0 40px rgba(255, 255, 255, 0.6));
    animation: glow 3s ease-in-out infinite;
}

@keyframes glow {
    0%, 100% {
        filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.1)) drop-shadow(0 0 40px rgba(255, 255, 255, 0.4));
    }
    50% {
        filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.1)) drop-shadow(0 0 60px rgba(255, 255, 255, 0.8));
    }
}

/* SVG Styles */
.key-bg {
    fill: var(--cream);
}

.static-key {
    fill: var(--gray);
}

.active-key {
    fill: #028b9b;
}

/* Title keys start with #028b9b */
.title-key .active-key {
    fill: #028b9b;
}

/* Nav keys start with #02839c */
.nav-key .active-key {
    fill: #02839c;
}

/* Nav key color without animation (for plus key) */
.nav-key-color {
    fill: #02839c;
}

.key-text {
    fill: var(--text-cream);
    font-family: var(--font-primary);
    font-size: 10px;
    font-weight: 700;
    isolation: isolate;
}

.key-text-large {
    fill: var(--text-cream);
    font-family: var(--font-primary);
    font-size: 19.61px;
    font-weight: 600;
    isolation: isolate;
}

.key-icon {
    fill: var(--text-cream);
}

.key-icon-stroke {
    fill: none;
    stroke: var(--text-cream);
    stroke-width: 4px;
    stroke-miterlimit: 10;
}

.key-icon-stroke-thick {
    fill: none;
    stroke: var(--text-cream);
    stroke-width: 5px;
    stroke-miterlimit: 10;
}

/* Title Keys Animation - Appear first */
.title-key {
    animation: bounceIn 0.8s ease-out forwards;
}

/* Color darken on title key backgrounds */
.title-key .active-key {
    animation: colorDarken 0.8s ease-out forwards;
}

/* Stagger title keys by ID */
#press-key { animation-delay: 0s; }
#press-key .active-key { animation-delay: 0s; }

#any-key { animation-delay: 0.25s; }
#any-key .active-key { animation-delay: 0.25s; }

#key-key { animation-delay: 0.5s; }
#key-key .active-key { animation-delay: 0.5s; }

#to-key { animation-delay: 0.75s; }
#to-key .active-key { animation-delay: 0.75s; }

#continue-key { animation-delay: 1s; }
#continue-key .active-key { animation-delay: 1s; }

@keyframes bounceIn {
    0% {
        transform: translateY(2px) scale(0.98);
    }
    50% {
        transform: translateY(1px) scale(0.97);
    }
    100% {
        transform: translateY(0) scale(1);
    }
}

/* Nav Keys Animation - Appear after title keys with color change */
.nav-key {
    animation: bounceIn 0.8s ease-out forwards;
}

/* Color change on the key background */
.nav-key .active-key {
    animation: colorPulse 0.8s ease-out forwards;
}

/* Stagger nav keys by ID - start after title keys with a shorter pause */
/* Order: home, control, shift, return */
#home-key { animation-delay: 2s; }
#home-key .active-key { animation-delay: 2s; }

#control-key { animation-delay: 2.35s; }
#control-key .active-key { animation-delay: 2.35s; }

#shift-key { animation-delay: 2.7s; }
#shift-key .active-key { animation-delay: 2.7s; }

#return-key { animation-delay: 3.05s; }
#return-key .active-key { animation-delay: 3.05s; }

/* Color darken animation for title key backgrounds */
@keyframes colorDarken {
    0% {
        fill: #028b9b;
    }
    50% {
        fill: #B55D7C;
    }
    100% {
        fill: #B55D7C;
    }
}

/* Color change animation for nav key backgrounds */
@keyframes colorPulse {
    0% {
        fill: #02839c;
    }
    40% {
        fill: #B55D7C;
    }
    70% {
        fill: #B55D7C;
    }
    100% {
        fill: #02839c;
    }
}

/* ===== CONTENT SECTIONS ===== */
.content-section {
    padding: var(--spacing-xl) var(--spacing-md);
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

#about-section {
    background-color: transparent;
    color: var(--text-cream);
    min-height: 100vh;
}

.content-section.dark {
    background-color: transparent;
    color: var(--text-cream);
}

#social-section {
    background-color: transparent;
    color: var(--text-cream);
}

.container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
}

h2 {
    font-family: var(--font-primary);
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    color: inherit;
}

h3 {
    font-family: var(--font-primary);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    color: inherit;
}

h4 {
    font-family: var(--font-primary);
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    color: inherit;
}

.exhibition-dates {
    font-family: var(--font-primary);
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: var(--spacing-md);
    color: inherit;
}

.content-section p {
    font-size: 1.1rem;
    line-height: 1.8;
    max-width: 800px;
}

.exhibition-description {
    max-width: 900px;
    margin-bottom: var(--spacing-md);
}

/* ===== EXHIBITION LAYOUT (IN ABOUT SECTION) ===== */
.exhibition-layout {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 30px;
    max-width: 1400px;
    width: 100%;
    margin: 0 auto;
    padding: 0 80px;
}

/* Left Side: Description Panel */
.description-panel {
    flex: 1;
    position: relative;
    min-height: 600px;
}

.description-content {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: opacity 0.4s ease-in-out;
    position: absolute;
    top: 150px;
    left: 0;
    right: 0;
}

.description-content.active {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
}

.floor-description {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: var(--spacing-md);
    color: var(--text-cream);
}

.featured-artists {
    margin-top: var(--spacing-md);
}

.featured-artists p {
    font-size: 1rem;
    color: var(--text-cream);
    margin-bottom: var(--spacing-xs);
}

/* Right Side: Vertical Floor Icons */
.floor-icons-vertical {
    display: flex;
    flex-direction: column;
    gap: 55px;
    flex-shrink: 0;
    padding-top: 0;
    transform: translateX(-60px);
}

.floor-icons-vertical .key-item {
    position: relative;
    cursor: pointer;
    transition: transform 0.3s ease, filter 0.25s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: iconPulse 3s ease-in-out infinite;
}

.floor-icons-vertical .key-item:nth-child(1) {
    animation-delay: 0s;
}

.floor-icons-vertical .key-item:nth-child(2) {
    animation-delay: 0.3s;
}

.floor-icons-vertical .key-item:nth-child(3) {
    animation-delay: 0.6s;
}

.floor-icons-vertical .key-item:nth-child(4) {
    animation-delay: 0.9s;
}

.floor-icons-vertical .key-item:hover {
    transform: scale(1.1);
    filter: drop-shadow(0 8px 20px rgba(254, 252, 229, 0.6));
    animation: none;
}

.floor-icons-vertical .key-item:active {
    transform: scale(1.05);
}

@keyframes iconPulse {
    0%, 100% {
        transform: scale(1);
        filter: drop-shadow(0 0 0 rgba(254, 252, 229, 0));
    }
    50% {
        transform: scale(1.05);
        filter: drop-shadow(0 4px 12px rgba(254, 252, 229, 0.4));
    }
}

.floor-icons-vertical .key-svg {
    width: 100px;
    height: auto;
    display: block;
}

.card-key-icon {
    fill: var(--text-cream);
}

.card-key-icon-stroke {
    fill: none;
    stroke: var(--text-cream);
    stroke-width: 3px;
    stroke-linecap: round;
    stroke-linejoin: round;
    stroke-miterlimit: 10;
}

/* Responsive Design */
@media (max-width: 968px) {
    .exhibition-layout {
        flex-direction: column-reverse;
        gap: var(--spacing-lg);
    }
    
    .floor-icons-vertical {
        flex-direction: row;
        justify-content: center;
        flex-wrap: wrap;
        padding-top: 0;
    }
    
    .description-panel {
        min-height: 400px;
    }
}



/* ===== VISIT SECTION ===== */
.visit-info {
    max-width: 600px;
}

.visit-info p {
    margin-bottom: var(--spacing-sm);
}

.visit-info strong {
    font-family: var(--font-primary);
    display: inline-block;
    min-width: 150px;
}

/* ===== SOCIAL SECTION ===== */
.social-links {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
}

.social-link {
    display: inline-block;
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--teal);
    color: var(--text-cream);
    text-decoration: none;
    font-family: var(--font-primary);
    font-weight: 600;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.social-link:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
}

/* ===== GALLERY PAGE ===== */
/* Floor-specific background themes */
#page2 {
    transition: background 0.5s ease;
    min-height: 100vh;
    overflow: hidden;
}

#page2[data-floor="home"] {
    background: #db4e35;
    position: relative;
}

#page2[data-floor="home"]::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('assets/home-icon.svg');
    background-size: 50px 50px;
    background-position: 40px 40px;
    background-repeat: space;
    opacity: 0.15;
    z-index: 0;
    pointer-events: none;
}

#page2[data-floor="control"] {
    background: #e27349;
    position: relative;
}

#page2[data-floor="control"]::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('assets/control-icon.svg');
    background-size: 50px 50px;
    background-position: 40px 40px;
    background-repeat: space;
    opacity: 0.15;
    z-index: 0;
    pointer-events: none;
}

#page2[data-floor="shift"] {
    background: #3d8999;
    position: relative;
}

#page2[data-floor="shift"]::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('assets/shift-icon.svg');
    background-size: 50px 50px;
    background-position: 40px 40px;
    background-repeat: space;
    opacity: 0.15;
    z-index: 0;
    pointer-events: none;
}

#page2[data-floor="return"] {
    background: #306d8b;
    position: relative;
}

#page2[data-floor="return"]::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('assets/return-icon.svg');
    background-size: 50px 50px;
    background-position: 40px 40px;
    background-repeat: space;
    opacity: 0.15;
    z-index: 0;
    pointer-events: none;
}

.gallery-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: var(--teal);
    padding: 0.25rem var(--spacing-md);
    display: flex;
    gap: var(--spacing-sm);
    justify-content: space-between;
    align-items: center;
    z-index: 1000;
    height: 45px;
}

.nav-left {
    display: flex;
    gap: var(--spacing-sm);
    align-items: center;
}

.nav-right {
    display: flex;
    gap: var(--spacing-sm);
    align-items: center;
}

.nav-btn {
    background: transparent;
    border: none;
    padding: 0.2rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
    width: 35px;
    height: 35px;
}

.nav-btn svg {
    width: 20px;
    height: 20px;
    fill: var(--text-cream);
}

.nav-btn .nav-icon {
    width: 20px;
    height: 20px;
    filter: none;
}

.nav-btn:hover {
    transform: scale(1.1);
}

.nav-btn:active {
    transform: scale(0.95);
}

/* Gallery Container */
.gallery-container {
    margin-top: 45px;
    padding: var(--spacing-md);
    height: calc(100vh - 45px);
    display: flex;
    align-items: center;
    overflow: hidden;
    position: relative;
    z-index: 1;
}

.gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
    width: 100%;
    height: 100%;
    justify-items: stretch;
    align-items: stretch;
    align-content: center;
    margin: 0 auto;
    padding: var(--spacing-md) 0;
}

.gallery-item {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    cursor: pointer;
    background: var(--gray);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    width: 100%;
    border-radius: 15px;
}

.gallery-item:hover {
    transform: scale(1.05);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
}

.gallery-item img,
.gallery-item video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.gallery-item-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to right, rgba(50, 50, 50, 0.95), rgba(50, 50, 50, 0.7) 60%, transparent);
    padding: 0.3rem 0.5rem;
    color: #ffffff;
    font-family: var(--font-primary);
    font-size: 0.7rem;
}

.overlay-title {
    font-weight: 700;
    margin-bottom: 1px;
    font-size: 0.8rem;
    color: #ffffff;
}

.overlay-artist {
    font-size: 0.7rem;
    opacity: 0.85;
    font-weight: 400;
    color: #ffffff;
}

/* ===== MODAL ===== */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(61, 137, 153, 0.5);
    backdrop-filter: blur(10px);
    overflow-y: auto;
}

/* Hide scrollbar for modal */
.modal::-webkit-scrollbar {
    display: none;
}

.modal {
    -ms-overflow-style: none;
    scrollbar-width: none;
}

.modal.active {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-md);
}

.modal-content {
    background-color: rgba(21, 37, 76, 0.5);
    backdrop-filter: blur(18px);
    max-width: 1000px;
    width: 100%;
    max-height: 90vh;
    position: relative;
    animation: modalSlideIn 0.3s ease-out;
    border: none;
}

/* Floor-specific modal colors */
#page2[data-floor="home"] .modal-content {
    background-color: rgba(219, 78, 53, 0.5);
}

#page2[data-floor="control"] .modal-content {
    background-color: rgba(226, 115, 73, 0.5);
}

#page2[data-floor="shift"] .modal-content {
    background-color: rgba(61, 137, 153, 0.5);
}

#page2[data-floor="return"] .modal-content {
    background-color: rgba(48, 109, 139, 0.5);
}

@keyframes modalSlideIn {
    from {
        transform: translateY(-50px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.modal-close {
    position: absolute;
    top: var(--spacing-sm);
    right: var(--spacing-sm);
    background: transparent;
    color: #ffffff;
    border: none;
    font-size: 2.5rem;
    width: 50px;
    height: 50px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease, opacity 0.2s ease;
    z-index: 10;
    line-height: 1;
    padding: 0;
}

.modal-close:hover {
    transform: rotate(90deg) scale(1.1);
    opacity: 0.7;
}

.modal-body {
    padding: var(--spacing-lg);
    overflow-y: auto;
    max-height: 85vh;
}

/* Hide scrollbar for modal body */
.modal-body::-webkit-scrollbar {
    display: none;
}

.modal-body {
    -ms-overflow-style: none;
    scrollbar-width: none;
}

.modal-media {
    width: 100%;
    max-height: 60vh;
    object-fit: contain;
    margin-bottom: var(--spacing-md);
}

.modal-title {
    font-family: var(--font-primary);
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xs);
    color: #ffffff;
}

.modal-artist {
    font-family: var(--font-primary);
    font-size: 1.2rem;
    color: #ffffff;
    margin-bottom: var(--spacing-md);
}

.modal-description {
    margin-bottom: var(--spacing-md);
    color: #ffffff;
}

.modal-description h3 {
    font-family: var(--font-primary);
    font-size: 1.3rem;
    margin-bottom: var(--spacing-sm);
    color: #ffffff;
}

.modal-description p {
    line-height: 1.8;
    margin-bottom: var(--spacing-sm);
    color: #ffffff;
}

.floor-enter-btn {
    background: var(--teal);
    color: var(--text-cream);
    border: none;
    padding: var(--spacing-sm) var(--spacing-md);
    font-family: var(--font-primary);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s ease, background 0.2s ease;
    margin-top: var(--spacing-md);
    width: 100%;
    max-width: 300px;
    display: block;
    margin-left: auto;
    margin-right: auto;
}

.floor-enter-btn:hover {
    transform: translateY(-3px);
    background: var(--blue);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}

.floor-enter-btn:active {
    transform: translateY(0);
}

.floor-artists-section {
    margin-top: var(--spacing-md);
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(254, 252, 229, 0.2);
}

.floor-artists-section h3 {
    font-family: var(--font-primary);
    font-size: 1.3rem;
    margin-bottom: var(--spacing-md);
    color: var(--text-cream);
}

.floor-artists-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--spacing-sm);
}

.floor-artist-item {
    padding: var(--spacing-sm);
    background: rgba(2, 139, 155, 0.2);
    color: var(--text-cream);
    line-height: 1.6;
}

.floor-artist-item strong {
    color: var(--text-cream);
    font-size: 1rem;
}

.floor-artist-item em {
    color: var(--cream);
    font-size: 0.9rem;
}

/* ===== RESPONSIVE DESIGN ===== */
@media (max-width: 768px) {
    h2 {
        font-size: 2rem;
    }
    
    .keys-grid {
        flex-wrap: wrap;
        gap: var(--spacing-md);
    }
    
    .key-svg {
        width: 120px;
    }
    
    .key-svg.return-key {
        width: 200px;
    }
    
    .content-section {
        padding: var(--spacing-md);
    }
    
    #logo-wrapper {
        width: 320px;
    }
    
    .gallery-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: var(--spacing-sm);
    }
    
    .nav-btn {
        width: 40px;
        height: 40px;
    }
    
    .nav-btn svg {
        width: 20px;
        height: 20px;
    }
    
    .social-links {
        flex-direction: column;
        gap: var(--spacing-sm);
    }
    
    .social-link {
        text-align: center;
    }
    
    .modal-body {
        padding: var(--spacing-md);
    }
    
    .modal-title {
        font-size: 1.5rem;
    }
}

@media (max-width: 480px) {
    #logo-wrapper {
        width: 260px;
    }
    
    .gallery-grid {
        grid-template-columns: 1fr;
    }
}

/* ===== UTILITY CLASSES ===== */
.hidden {
    display: none !important;
}

.fade-in {
    animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

/* ===== SLIDE IN ANIMATIONS ===== */
.slide-in {
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
}

.slide-in-visible {
    opacity: 1;
    transform: translateY(0);
}

/* ===== SCROLLBAR STYLING ===== */
::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    background: transparent;
}

::-webkit-scrollbar-thumb {
    background: rgba(61, 137, 153, 0.4);
    transition: background 0.3s ease;
}

::-webkit-scrollbar-thumb:hover {
    background: rgba(61, 137, 153, 0.7);
}

/* Auto-hide scrollbar - only show when scrolling */
html {
    scrollbar-width: thin;
    scrollbar-color: rgba(61, 137, 153, 0.4) transparent;
}

/* Firefox auto-hide support */
* {
    scrollbar-width: thin;
    scrollbar-color: rgba(61, 137, 153, 0.4) transparent;
}

/* For WebKit browsers - fade out when not scrolling */
::-webkit-scrollbar-thumb {
    opacity: 0;
    transition: opacity 0.3s ease, background 0.3s ease;
}

html:hover ::-webkit-scrollbar-thumb {
    opacity: 1;
}

body::-webkit-scrollbar-thumb {
    opacity: 0;
}

body:hover::-webkit-scrollbar-thumb,
body:active::-webkit-scrollbar-thumb {
    opacity: 1;
}
